@page
@model BookCRUDApp.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Index";

}

    <div class="container-fluid row">
        <div class="col-9 text-info">
            <h2>Create a Book</h2>
        </div>

        <div class="col-3">
            <a   asp-page="Create" class="btn btn-primary">Create Book</a>
        </div>

        <div class="col-12 border p-3 m-3">
            <form method="post">
                @if(Model.Books.Count() > 0)
                {
                  <table class="table table-striped">
                      <tr class="table-secondary">
                          <th>
                              <label asp-for="Books.FirstOrDefault().Name"></label>
                          </th>

                          <th>
                              <label asp-for="Books.FirstOrDefault().Author"></label>
                          </th>

                          <th>
                              <label asp-for="Books.FirstOrDefault().ISBN"></label>
                          </th>

                          <th>
                              <label >Action</label>
                          </th>

                      </tr>

                      @foreach (var item in Model.Books)
                      {
                  <tr>
                      <td>
                          @Html.DisplayFor(m => item.Name)
                      </td>
                      <td>
                          @Html.DisplayFor(m => item.Author)
                      </td>

                      <td>
                          @Html.DisplayFor(m => item.ISBN)
                      </td>

                      <td>
                          <button asp-page-handler="Delete" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to delete this record?')" class="btn btn-danger btn-sm">Delite</button>
                          <a asp-page="Edit"  asp-route-id="@item.ID" class="btn btn-info btn-sm text-white">Edit</a>
                      </td>
                  </tr>
                      }
                  </table>
                }
                else
                {
                    <p>No Books Available..</p>
                }
            </form>

        </div>
    </div>
